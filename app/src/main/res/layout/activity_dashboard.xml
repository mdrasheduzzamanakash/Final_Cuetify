<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".activities.Dashboard">


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBarNewsFeed"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_percent=".93"
        android:visibility="visible"
        app:reverseLayout="true"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/recycler_view_newFeed"
        android:background="#9E9898"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ScrollView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/border_background"
        app:layout_constraintBottom_toTopOf="@+id/add_feed_button"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/news_feed_new_post_field"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/post_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:hint="Post your thought "
                android:background="@drawable/border_background"
                android:lines="2"
                android:textSize="@dimen/_16sdp" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_post"
                    android:background="@drawable/border_background"
                    android:text="Go AHEAD"/>
                <ProgressBar
                    android:id="@+id/progressBar_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_feed_button"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_newFeed"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_newFeed"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_add_feed_button"
        android:src="@drawable/ic_cancel"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_newFeed"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_newFeed"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>