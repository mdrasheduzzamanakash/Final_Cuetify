<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_very_keen"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent">



        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/images"
            app:riv_oval="true"
            android:id="@+id/comment_profile_image"/>
        <LinearLayout
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_commenter"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:text="Rasheduzzaman - 1704007"/>
            <TextView
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:text="Hello! How are you? I am fine. There are a lot of thing in this world for making us happy."
                android:textSize="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="#000000"
                android:id="@+id/comment_message"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:lottie_rawRes="@raw/like"
            android:id="@+id/comment_like"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_delete"
            android:id="@+id/comment_delete"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>